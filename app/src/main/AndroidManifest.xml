<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permissions for App Lock and Exporting Data -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher1_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinTrack"
        tools:targetApi="31">
        <activity
            android:name=".YearlyReportActivity"
            android:exported="false" />
        <activity
            android:name=".CategoriesActivity"
            android:exported="false" />
        <activity
            android:name=".AccountsActivity"
            android:exported="false" />
        <activity
            android:name=".auth.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.LoginActivity" />
        <activity android:name=".auth.SignUpActivity" />
        <activity android:name=".auth.ForgotPasswordActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".AddTransactionActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".SavingsGoalsActivity" />
        <activity android:name=".AppLockActivity" />
    </application>

</manifest>